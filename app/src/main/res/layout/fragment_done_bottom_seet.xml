<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/done_fragment"
        android:background="@color/black"
        tools:context=".fragment.DoneBottomSeetFragment">

        <ImageView
            android:id="@+id/tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_symbol"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/set_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tick"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="You're all set"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/set_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_text"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="@string/summary"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_below="@id/set_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/tickets" />

        <TextView
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Done"
            android:textColor="#FE2C5A"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginBottom="100dp" />


    </RelativeLayout>
</layout>